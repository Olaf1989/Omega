<h2 class="index-title">Overzicht van cursussen</h2>
<% if can? :manage, Course %>
  <p class="index-new"><%= link_to 'Nieuwe cursus', new_course_path %></p>
<% end %>
<table class="index-table">
  <thead>
    <tr id="tr">
      <th></th>
      <th>Naam</th>
      <th>Begindatum</th>
      <th>Einddatum</th>
      <th>Cursusduur</th>
      <th>Prijs</th>
      <th colspan="3"></th>
    </tr>
  </thead>




  <tbody>
    <% @courses.sort { |a,b| a.naam <=> b.naam }.each do |course| %>
    <tr>
      <% if current_user != nil %>
        <% if current_user.courses.include?(course) %>
        <td><a class=info href="#"><i class="fa fa-check-square-o fa-fw"></i><span>U bent al aangemeld voor deze cursus.</span></a></td>
        <% else %>
          <td></td>
        <% end %>
      <% else %>
        <td></td>
      <% end %>

        <td style="text-align:left;"><%= course.naam %></td>
        <td><%= friendly_date_compact course.begindatum %></td>
        <td><%= friendly_date_compact course.einddatum %></td>
        <td><%= course.cursusduur %></td>
        <td><% if course.prijs == nil %>Onbekend<% else %>â‚¬ <%= course.prijs %><% end %></td>

        <td><%= link_to 'Bekijk', course %></td>
        <% if can? :manage, Course %>
          <td><%= link_to 'Wijzig', edit_course_path(course) %></td>
          <td><%= link_to 'Verwijder', course, method: :delete, data: { confirm: 'Weet u het zeker?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
